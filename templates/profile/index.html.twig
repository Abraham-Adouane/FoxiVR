{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
<div class='row'>
{% include 'components/_navProfile.html.twig' %}
    
{# {{form_start(form)}}
{{form_row(form.name)}}
{{form_end(form)}} #}
        <main class="col-12 col-lg-9 py-2">
          <div class="container-fluid">
            <div class="row">
              <div class="col-xl-7 mx-auto">
                <!-- Profile picture -->
                <div class="card shadow border-0 mt-4 mb-10">
                  <div class="card-body">
                    <div class="d-flex align-items-center">
                      <div>
                        <div class="d-flex align-items-center">
                          <a href="#" class="avatar avatar-lg bg-warning rounded-circle text-white">
                            <img alt="..." src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS0m5Cy4lXCbuyG54L0vuo3i5-ALavHe9KmhWA_wDM&s">
                          </a>
                          <div class="ms-4">
                            <span class="h4 d-block mb-0">{{app.user.firstname ~ ' ' ~ app.user.lastname}}</span>
                          </div>
                        </div>
                      </div>
                      <div class="ms-auto">
                        <button type="button" class="btn btn-sm btn-secondary">Importer une image</button>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Form -->
                <div class="mb-5">
                  <h5 class="mb-0">Vos informations</h5>
                </div>
                <form class="mb-6">
                  <div class="row mb-5">
                    <div class="col-md-6">
                      <div class="">
                        <label class="form-label" for="last_name">Nom</label>
                        <input type="text" class="form-control" id="last_name" value={{app.user.lastname}}>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="">
                        <label class="form-label" for="first_name">Prénom</label>
                        <input type="text" class="form-control" id="first_name" value={{app.user.firstname}}>
                      </div>
                    </div>
                  </div>
                  <div class="row g-2">
                    <div class="col-md-6">
                      <div class="">
                        <label class="form-label" for="email">E-mail</label>
                        <input type="email" class="form-control" id="email" value={{app.user.email}}>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="">
                        <label class="form-label" for="phone_number">Téléphone</label>
                        <input type="tel" class="form-control" id="phone_number" value={{app.user.firstname}}>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="">
                        <label class="form-label" for="address">Adresse</label>
                        <input type="text" class="form-control" id="address" value={{app.user.address}}>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="">
                        <label class="form-label" for="codePostal">Code postal</label>
                        <input type="text" class="form-control" id="codePostal" value={{app.user.zipcode}}>
                      </div>
                    </div>
                    <div class="col-md-8">
                      <div class="">
                        <label class="form-label" for="city">Ville</label>
                        <input type="text" class="form-control" id="city" value={{app.user.city}}>
                      </div>
                    </div>
                  </div>
                  <div class="text-end m-2">
                    <button type="button" class="btn btn-sm btn-secondary">Annuler</button>
                    <button type="submit" class="btn btn-sm btn-primary">Sauvegarder</button>
                  </div>
                </form>
                <hr class="my-2" />
    
    
                  

                </div>
              </div>
            </div>
          </div>
        </main>
</div>
{% endblock %}
